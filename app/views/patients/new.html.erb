<div class="main">
  <div class=" form_wrap">
    <div class="form_header">
      <h2>患者登録</h2>
    </div>
        
      
        <%= form_with model: @patient, url: patients_path, class: 'new-patients-main', local: true do |f| %>
          <%#= render 'devise/shared/error_messages', model: f.object %>
      
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">名前</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 鈴木一朗"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">年齢</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :age, class:"input-default", id:"age", placeholder:"例）80" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">性別</label>
          <span class="indispensable">必須</span>
        </div>
        <div class="col-sm-1">
        <%= f.radio_button :sex_id, :male %>
        <%= f.label :sex_id, "男性", {value: :male} %>
        <%= f.radio_button :sex_id, :female %>
        <%= f.label :sex_id, "女性", {value: :female} %>
        </div>
        </div>
        <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">身長</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :height, class:"input-default", id:"height", placeholder:"例）150" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">体重</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :weight, class:"input-default", id:"weight", placeholder:"例）60" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">郵便番号</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">住所</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :address, class:"input-default", id:"address", placeholder:"例）鹿児島県鹿児島市"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">同居家族の有無</label>
          <span class="indispensable">必須</span>
        </div>
        <div class="col-sm-2">
        <%= f.radio_button :family_living_together_id, :presence %>
        <%= f.label :family_living_together_id, "有", {value: :presence} %>
        <%= f.radio_button :family_living_together_id, :absence %>
        <%= f.label :family_living_together_id, "無", {value: :absence} %>
        </div>
        </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">疾患名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :disease_name, class:"input-default", id:"disease_name", placeholder:"例）脳梗塞"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">既往歴</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :medical_history, class:"input-default", id:"medical_history", placeholder:"例）糖尿病"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">手術歴</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :surgical_history, class:"input-default", id:"surgical_history", placeholder:"例）右股関節人工骨頭置換術"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">留意すべき感染症</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :infection, class:"input-default", id:"infection", placeholder:"例）B型肝炎"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">備考</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :comment, class:"input-default", id:"comment", placeholder:"例）気になること等"%>
      </div>
    </div>
    <div class='new-patient-btn'>
      <%= f.submit "登録する" ,class:"patient-btn" %>
    </div>
    <div class='second-action'>
        <%=link_to "トップへ戻る", root_path, class: :top_btn%> 
        </div>
    <% end %>
  </div>
</div>