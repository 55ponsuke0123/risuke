<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      評価内容
    </h1>
  

    
   <%= form_with model: @patient_evaluated, url: new_patient_evaluation_path(@patient), id: 'charge-form', class: 'transaction-form-wrap', local: true do |f| %>
      
      <%#= render 'shared/error_messages', model: f.object %>
       


    <div class='evaluations-form'>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">基本動作</label>
        </div>
        <div class='detail-list-1'>
          <div class="detail-patient">寝返り</div>
          <div class="detail-value"><%= f.collection_select(:turn_over_id, TurnOver.all, :id, :name, {}, {class:"select-box", id:"patient-1-1"}) %></div>
          <div class="detail-patient">起き上がり</div>
          <div class="detail-value"><%= f.collection_select(:get_up_id, GetUp.all, :id, :name, {}, {class:"select-box", id:"patient-1-2"}) %></div>
          <div class="detail-patient">端座位</div>
          <div class="detail-value"><%= f.collection_select(:sitting_position_id, SittingPosition.all, :id, :name, {}, {class:"select-box", id:"patient-1-3"}) %></div>
          <div class="detail-patient">起立</div>
          <div class="detail-value"><%= f.collection_select(:stand_up_id, StandUp.all, :id, :name, {}, {class:"select-box", id:"patient-1-4"}) %></div>
          <div class="detail-patient">立位</div>
          <div class="detail-value"><%= f.collection_select(:standing_id, Standing.all, :id, :name, {}, {class:"select-box", id:"patient-1-5"}) %></div>
          <div class="detail-patient">移乗</div>
          <div class="detail-value"><%= f.collection_select(:transfer_id, Transfer.all, :id, :name, {}, {class:"select-box", id:"patient-1-6"}) %></div>
          <div class="detail-patient">車椅子操作</div>
          <div class="detail-value"><%= f.collection_select(:wheelchair_operation_id, WheelchairOperation.all, :id, :name, {}, {class:"select-box", id:"patient-1-7"}) %></div>
          <div class="detail-patient">歩行</div>
          <div class="detail-value"><%= f.collection_select(:walking_id, Walking.all, :id, :name, {}, {class:"select-box", id:"patient-1-8"}) %></div>
          <div class="detail-patient">階段</div>
          <div class="detail-value"><%= f.collection_select(:stairs_id, Stairs.all, :id, :name, {}, {class:"select-box", id:"patient-1-9"}) %></div>
        </div>
      </div>
    </div>

    <div class='green-btn'>
      <%= f.submit "登録する" ,class:"evaluation-btn" %>
    </div>
  <% end %>
  </div>
  </div>